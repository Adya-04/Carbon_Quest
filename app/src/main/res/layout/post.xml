<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:background="@color/white"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_icon_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:padding="5dp"
        android:src="@drawable/avatar1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circular" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:text="philip0789"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/profile_icon_img"
        app:layout_constraintLeft_toRightOf="@id/profile_icon_img"
        app:layout_constraintTop_toTopOf="@id/profile_icon_img" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/planting_tree"
        app:layout_constraintTop_toBottomOf="@id/profile_icon_img"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Philipp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image" />


    <TextView
        android:id="@+id/Description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:maxLines="9"
        android:text="Tips to get started on planting forest trees and grow the environment!"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/name"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/like_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/instagram_like"
        app:layout_constraintTop_toBottomOf="@id/Description"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/comment_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/tw_comment"
        app:layout_constraintLeft_toRightOf="@id/like_icon"
        app:layout_constraintTop_toBottomOf="@id/Description"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/tw_share"
        app:layout_constraintLeft_toRightOf="@id/comment_icon"
        app:layout_constraintTop_toBottomOf="@id/Description"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>